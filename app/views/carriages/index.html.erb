<p id="notice"><%= notice %></p>

<h1>Carriages</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Type</th>
      <th>Train</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carriages.each do |carriage| %>
      <tr>
        <td><%= carriage.id %></td>
        <td><%= carriage.carriage_type %></td>
        <td><%= carriage.current_train.number %></td>
        <td><%= link_to 'Show', carriage %></td>
        <td><%= link_to 'Edit', edit_carriage_path(carriage) %></td>
        <td><%= link_to 'Destroy', carriage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Carriage', new_carriage_path %> <br/>

