<%= form_for(@carriage) do |f| %>
  <%= render 'common/errors', resource: @carriage %>

  <div class="field">
    <%= f.label :train, "Train" %>
    <%= f.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="field">
    <%= f.label :type, "Type of carriage" %>
    <%= f.select :type, ([CoupeCarriage.name, EconomyCarriage.name, LuxCarriage.name, SeatCarriage.name]) %>
  </div>

  <div class="field">
    <%= f.label :top_seats, "Count Up places" %>
    <%= f.select :top_seats, ((0..10).map {|i| [i,i] }) %>
  </div>

  <div class="field">
    <%= f.label :bottom_seats, "Count Up places" %>
    <%= f.select :bottom_seats, ((0..10).map {|i| [i,i] }) %>
  </div>

  <div class="actions">
    <%= f.submit "#{@carriage.new_record? ? 'Create' : 'Edit'}" %>
  </div>
<% end %>
