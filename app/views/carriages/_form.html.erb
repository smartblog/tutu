  </div>

  <div class="field">
    <%= f.label :count_up, "Count Up places" %>
    <%= f.text_field :count_up %>
  </div>

  <div class="field">
    <%= f.label :count_down, "Count Down places" %>
    <%= f.text_field :count_down %>
  </div>

  <div class="actions">
    <%= f.submit "#{@carriage.new_record? ? 'Create' : 'Edit'}" %>
  </div>
<% end %>
