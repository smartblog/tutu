<%= form_for(@carriage) do |f| %>
  <%= render 'common/errors', resource: @carriage %>

  <div class="field">
    <%= f.label :train, "Train" %>
    <%= f.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="field">
    <%= f.label :carriage_type %>
    <%= f.select(:carriage_type, options_for_select(["Coupe", "Plac"])) %>
  </div>

  <div class="field">
    <%= f.label :count_up, "Count Up places" %>
    <%= f.select :count_up, ((0..10).map {|i| [i,i] }) %>
  </div>

  <div class="field">
    <%= f.label :count_down, "Count Down places" %>
    <%= f.select :count_down, ((0..10).map {|i| [i,i] }) %>
  </div>

  <div class="actions">
    <%= f.submit "#{@carriage.new_record? ? 'Create' : 'Edit'}" %>
  </div>
<% end %>
