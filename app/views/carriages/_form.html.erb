<%= form_for(@carriage) do |f| %>
  <% if @carriage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@carriage.errors.count, "error") %> prohibited this carriage from being saved:</h2>

      <ul>
      <% @carriage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :current_train, "Train" %>
    <%= f.collection_select :current_train_id, Train.all, :id, :number %>
