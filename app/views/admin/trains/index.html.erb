<h1><%= t('.title') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.table_number') %></th>
      <th><%= t('.table_route') %></th>
      <th><%= t('.table_current_station') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <%= render train %>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to t('.new'), new_admin_train_path, :class => "btn btn-primary" %>
<%= link_to t('common.back'), welcome_index_path, :class => "btn btn-default" %> </p>
